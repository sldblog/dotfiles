[user]
	email = david.lantos@gmail.com
	name = David Lantos
[push]
	default = simple
[merge]
	tool = p4merge
[diff]
	tool = p4merge
[mergetool "p4merge"]
	path = /Applications/p4merge.app/Contents/MacOS/p4merge
[core]
	excludesfile = /Users/davidlantos/+Environment/dotfiles/.gitignore
[mergetool]
	keepBackup = false
[alias]
	rl = reflog --date=iso
	ll = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(green)%d%Creset %s %Cblue(%cr - %cd) %C(bold blue)<%ae>%Creset' --abbrev-commit
